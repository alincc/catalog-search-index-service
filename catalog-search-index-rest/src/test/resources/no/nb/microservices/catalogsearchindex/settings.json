            },
            "remove_extra_space" : {
                "type" : "pattern_replace",
                "pattern" : "\\s+",
                "replacement" : " "
            },
            "numeric_filter" : {
                "type" : "pattern_replace",
                "pattern" : "[^\\d]",
                "replacement" : ""
            },
            "folding" : {
                "type" : "icu_folding",
                "unicodeSetFilter" : "[^æøåÆØÅ]"
            }
        }
    }
